<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:id="@+id/watch_detail_layout_root">

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/watch_detail_search"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="16dp" android:textIsSelectable="true"
        tools:context=".WatchDetailFragment"
        android:inputType="textAutoComplete"
        android:autoText="false"
        android:hint="@string/watch_detail_watch_hint"
        android:editable="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/watch_detail_ignore"
        android:editable="true"
        android:hint="@string/watch_detail_ignore_hint"
        style="@style/TextAppearance.AppCompat.Small" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watch_detail_check_sac"
        android:id="@+id/watch_detail_check_sac"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watch_detail_check_cl"
        android:id="@+id/watch_detail_check_cl"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watch_detail_check_wm"
        android:id="@+id/watch_detail_check_wm"
        android:checked="true" />

</LinearLayout>
